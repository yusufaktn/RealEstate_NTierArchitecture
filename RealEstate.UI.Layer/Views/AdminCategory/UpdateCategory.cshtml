@model RealEstate.EntityLayer.Concrete.TBL_CATEGORY

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<section class="content">

    @using (Html.BeginForm("UpdateCategory", "AdminCategory", FormMethod.Post))
    {
        <div class="card-body">
            <div class="form-group">
                <label for="inputName">Kategori Adı</label>
                <input type="text" class="form-control" name="CATEGORY_NAME" value="@Model.CATEGORY_NAME">
                @Html.ValidationMessageFor(x => x.CATEGORY_NAME, "", new { style = "color:red;" })

            </div>

            <div class="form-group">
                <label for="inputDescription">Kategori Açıklaması</label>
                <textarea name="CATEGORY_DETAILS" class="form-control" rows="4">@Model.CATEGORY_DETAILS</textarea>
                @Html.ValidationMessageFor(x => x.CATEGORY_DETAILS, "", new { style = "color:red;" })
            </div>

            <div class="form-group">
                <label for="inputStatus">Durum</label>
                <input type="text" name="CATEGORY_STATUS" class="form-control" value="@(Model.CATEGORY_STATUS==true?"Aktif":"Pasif")">
                @Html.ValidationMessageFor(x => x.CATEGORY_STATUS, "", new { style = "color:red;" })
                @*Bu kısımda dropdownlist olması gerekiyor*@
            </div>
            <button class="btn btn-success">
                Güncelle
            </button>

        </div>

        @Html.HiddenFor(x=>x.CATEGORY_ID)

    }



</section>