
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div id="fh5co-page">

    <div class="fh5co-page-title" style="background-image: url(images/slide_6.jpg);">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12 animate-box">
                    <h1><span class="colored">Bizimle İletişime</span> Geç</h1>
                </div>
            </div>
        </div>
    </div>


    <div class="fh5co-contact animate-box">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h3>İletişim Bilgileri</h3>
                    <ul class="contact-info">
                        <li><i class="icon-map"></i>Kuruçeşme, Altıparmak Cd. no:49, 16050 Osmangazi̇/Bursa, Türkiye.</li>
                        <li><i class="icon-phone"></i>+90 0545 729 91 51</li>
                        <li><i class="icon-envelope"></i><a href="#">gayrimenkul@gmail.com</a></li>
                        <li><i class="icon-globe"></i><a href="#">www.gayrimenkul.com</a></li>
                    </ul>
                </div>
                @using (Html.BeginForm("ContactPush", "Contact", FormMethod.Post))
                {
                    <div class="col-md-8 col-md-push-1 col-sm-12 col-sm-push-0 col-xs-12 col-xs-push-0">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" placeholder="İsim" type="text" name="NAME">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" placeholder="Mail" type="text" name="MAIL">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <textarea  class="form-control" id="" cols="30" rows="7" placeholder="Mesaj" name="MESSAGE"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input value="Mesajı Gönder" class="btn btn-primary" type="submit">
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>


</div>



